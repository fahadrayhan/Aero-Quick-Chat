<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="oval">
            <gradient
                android:type="radial"
                android:centerX="0.5"
                android:centerY="0.5"
                android:gradientRadius="20dp"
                android:startColor="#35000000"
                android:endColor="#20000000" />
            <stroke
                android:width="1dp"
                android:color="#35FFFFFF" />
        </shape>
    </item>
    <item>
        <shape android:shape="oval">
            <gradient
                android:type="radial"
                android:centerX="0.5"
                android:centerY="0.5"
                android:gradientRadius="20dp"
                android:startColor="#20FFFFFF"
                android:endColor="#10FFFFFF" />
            <stroke
                android:width="1dp"
                android:color="#25FFFFFF" />
        </shape>
    </item>
</selector>