<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:startColor="#25000000"
                android:endColor="#15000000"
                android:angle="90" />
            <corners android:radius="14dp" />
            <stroke
                android:width="1dp"
                android:color="#30FFFFFF" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:startColor="#18FFFFFF"
                android:endColor="#08FFFFFF"
                android:angle="90" />
            <stroke
                android:width="1dp"
                android:color="#25FFFFFF" />
            <corners android:radius="14dp" />
        </shape>
    </item>
</selector>