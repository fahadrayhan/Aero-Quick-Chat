<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.AeroQuickChat" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/text_on_primary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary_color</item>
        <item name="colorSecondaryVariant">@color/secondary_variant</item>
        <item name="colorOnSecondary">@color/text_primary</item>
        <!-- Surface colors -->
        <item name="colorSurface">@color/surface_color</item>
        <item name="colorOnSurface">@color/text_primary</item>
        <item name="android:colorBackground">@color/background_color</item>
        <item name="colorOnBackground">@color/text_primary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@android:color/transparent</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <!-- Typography -->
        <item name="textAppearanceHeadline1">@style/TextAppearance.AeroQuickChat.Headline1</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.AeroQuickChat.Headline2</item>
        <item name="textAppearanceHeadline3">@style/TextAppearance.AeroQuickChat.Headline3</item>
        <item name="textAppearanceBody1">@style/TextAppearance.AeroQuickChat.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.AeroQuickChat.Body2</item>
        <item name="textAppearanceCaption">@style/TextAppearance.AeroQuickChat.Caption</item>
        <!-- Error colors for Material Design 3 compatibility -->
        <item name="colorError">@color/error</item>
        <item name="colorOnError">@color/text_primary</item>
        <item name="colorErrorContainer">@color/error_container</item>
        <item name="colorOnErrorContainer">@color/text_primary</item>
        <!-- Material Components -->
        <item name="materialCardViewStyle">@style/Widget.AeroQuickChat.CardView</item>
        <item name="materialButtonStyle">@style/Widget.AeroQuickChat.Button</item>
        <!-- Window configuration for custom toolbar -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!-- ActionBar styling -->
        <item name="actionBarStyle">@style/Widget.AeroQuickChat.ActionBar</item>
        <item name="actionBarTheme">@style/ThemeOverlay.AeroQuickChat.ActionBar</item>
        <!-- Menu item styling -->
        <item name="actionMenuTextColor">@color/text_primary</item>
        <item name="android:actionMenuTextColor">@color/text_primary</item>
    </style>

    <style name="Theme.AeroQuickChat" parent="Base.Theme.AeroQuickChat" />

    <!-- Typography Styles -->
    <style name="TextAppearance.AeroQuickChat.Headline1" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="fontFamily">sans-serif</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontWeight" tools:targetApi="p">700</item>
    </style>

    <style name="TextAppearance.AeroQuickChat.Headline2" parent="TextAppearance.MaterialComponents.Headline2">
        <item name="fontFamily">sans-serif</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontWeight" tools:targetApi="p">600</item>
    </style>

    <style name="TextAppearance.AeroQuickChat.Headline3" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="fontFamily">sans-serif</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <style name="TextAppearance.AeroQuickChat.Body1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="fontFamily">sans-serif</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontWeight" tools:targetApi="p">400</item>
    </style>

    <style name="TextAppearance.AeroQuickChat.Body2" parent="TextAppearance.MaterialComponents.Body2">
        <item name="fontFamily">sans-serif</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:fontWeight" tools:targetApi="p">400</item>
    </style>

    <style name="TextAppearance.AeroQuickChat.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="fontFamily">sans-serif</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/text_tertiary</item>
        <item name="android:fontWeight" tools:targetApi="p">400</item>
    </style>

    <style name="TextAppearance.AeroQuickChat.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="fontFamily">sans-serif</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- Widget Styles -->
    <style name="Widget.AeroQuickChat.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">8dp</item>
        <item name="cardBackgroundColor">@color/card_background</item>
        <item name="contentPadding">16dp</item>
    </style>

    <style name="Widget.AeroQuickChat.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@drawable/button_background</item>
        <item name="android:textColor">@color/text_on_primary</item>
        <item name="cornerRadius">16dp</item>
        <item name="android:minHeight">56dp</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">sans-serif</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:fontWeight" tools:targetApi="p">600</item>
        <item name="android:letterSpacing">0.01</item>
    </style>

    <!-- ActionBar Styles -->
    <style name="Widget.AeroQuickChat.ActionBar" parent="Widget.MaterialComponents.ActionBar.Primary">
        <item name="android:background">@color/surface_color</item>
        <item name="titleTextStyle">@style/TextAppearance.AeroQuickChat.Headline3</item>
        <item name="android:elevation">4dp</item>
        <item name="elevation">4dp</item>
    </style>

    <style name="ThemeOverlay.AeroQuickChat.ActionBar" parent="ThemeOverlay.MaterialComponents.ActionBar">
        <item name="colorControlNormal">@color/text_primary</item>
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="actionMenuTextColor">@color/text_primary</item>
    </style>

</resources>